/* pages/tempchang.wxss */
.content_bg {
  width: 100%;
  height: 130px;
}
.tab_top {
  width: 90%;
  height: 60px;
  background-color: #fff;
  position: relative;
  top: -20px;
  left: 5%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  border-radius: 5px;
}
.tab_item {
  width: 25%;
  display: flex;
  flex-direction:column;
  align-items: center; 
  justify-content: center;
}
.tab_num {
  font-size: 14px;
  color: #0075f6;
}
.tab_text {
  font-size: 14px;
  color: #505050;
}
.deviceBox {
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; 
}
.device_item {
  width: 45%;
  height: 100px;
  border-radius: 3px;
  margin-top: 10px;
  background-color: #fff;
  margin-left: 5%;
}
.warm {
  background-color: #ff8135;
}
.device_top {
  font-size: 12px;
  line-height: 50px;
  text-align: center;
}
.device_temp {
  font-size: 26px;
  text-align: center;
}